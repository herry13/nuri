include "modules/apache/apache.sfp"
include "modules/mysql/mysql.sfp"

class Tikiwiki {
	installed  = false
	path = "/wiki"
	webserver = parent.apache
	database isref Mysql

	procedure set_webserver (ws isref Apache) {
		condition { }
		effect {
			this.webserver = ws
		}
	}

	procedure set_database (db isref Mysql) {
		condition { }
		effect {
			this.database = db
		}
	}

	procedure set_path (path isref String) {
		condition {
			this.installed = true
		}
		effect {
			this.path = path
		}
	}

	procedure install {
		condition {
			this.webserver.installed = true
		}
		effect {
			this.installed = true
		}
	}

	procedure uninstall {
		condition { }
		effect {
			this.installed = false
		}
	}
}
