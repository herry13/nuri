bsig {
	hpvm16 {
		apache {
			operator op1_refer_to {
				s = hpvm17.mysql
				conditions {
					hpvm17.mysql.running = yes
				}
				effects {
					hpvm16.apache.refer = hpvm17.mysql
				}
			}
			operator op2_refer_to {
				s = hpvm18.mysql
				conditions {
					hpvm18.mysql.running = yes
				}
				effects {
					hpvm16.apache.refer = hpvm18.mysql
				}
			}
		}
	}
	hpvm17 {
		mysql { 
			operator op1_start {
				conditions { }
				effects {
					hpvm17.mysql.running = yes
				}
			}
			operator op2_stop {
				conditions {
					hpvm16.apache.refer = hpvm18.mysql
				}
				effects {
					hpvm17.mysql.running = no
				}
			}
		}
	}
	hpvm18 {
		mysql {
			operator op1_start {
				conditions { }
				effects {
					hpvm18.mysql.running = yes
				}
			}
			operator op2_stop {
				conditions {
					hpvm16.apache.refer = hpvm17.mysql
				}
				effects {
					hpvm18.mysql.running = no
				}
			}
		}
	}
}
