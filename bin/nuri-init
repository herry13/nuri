#!/bin/sh

### BEGIN INIT INFO
# Provides:          nginx
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts nuri client daemon
# Description:       starts nuri client daemon
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
HOME="/opt/nuri"
DAEMON="/opt/nuri/bin/nuri-client"
NAME=nuri
DESC=nuri

test -x $DAEMON || exit 0

set -e

. /lib/lsb/init-functions

case "$1" in
	start)
		echo -n "Starting $DESC: "
		# Check if the ULIMIT is set
		if [ -n "$ULIMIT" ]; then
			# Set the ulimits
			ulimit $ULIMIT
		fi
		$DAEMON start
		echo "$NAME."
		sleep 1
		ln -sf "$HOME/var/nuri.pid.1" "/var/run/nuri.pid"
		;;

	stop)
		echo -n "Stopping $DESC: "
		$DAEMON stop
		echo "$NAME."
		rm -f "/var/run/nuri.pid"
		;;

	restart)
		echo -n "Restarting $DESC: "
		$DAEMON restart
		echo "$NAME."
		sleep 1
		ln -sf "$HOME/var/nuri.pid.1" "/var/run/nuri.pid"
		;;

	status)
		status_of_proc -p /var/run/$NAME.pid "$DAEMON" nuri && exit 0 || exit $?
		;;
	*)
		echo "Usage: $NAME {start|stop|restart|status}" >&2
		exit 1
		;;
esac

exit 0
