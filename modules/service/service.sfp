include "../package/package.sfp"

schema Service extends Package {
	service_name = ""
	running : Bool // = false
	
	procedure uninstall {
		condition {
			this.running = false
			this.installed = true
		}
		effect {
			this.installed = false
		}
	}

	procedure start {
		condition {
			this.installed = true
			this.running = false
		}
		effect {
			this.running = true
		}
	}

	procedure stop {
		condition {
			this.running = true
		}
		effect {
			this.running = false
		}
	}
}
