include "modules/cloud/cloud.sfp"
include "modules/vm/vm.sfp"

class HPCloud extends Cloud {
	running is false

	procedure delete_vm(vm isref VM) {
		condition {
			this.running = true
			vm.created = true
		}
		effect {
			vm.created = false
			vm.running = false
		}
	}

	procedure create_vm(vm isref VM) {
		condition {
			this.running = true
			vm.created = false
		}
		effect {
			vm.created = true
			vm.running = true
		}
	}
}
