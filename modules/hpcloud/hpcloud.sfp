include "modules/vm/vm.sfp"
include "modules/cloud/cloud.sfp"

schema HPCloud extends Cloud {
	procedure create_vm_small_ubuntu_quantal(vm isref VM) {
		cost is 10
		condition {
			this.running = true
			vm.created = false
		}
		effect {
			vm.created = true
			vm.running = true
			vm.oncloud = this
			vm.flavor_id = "101"
			vm.image_id = "75839"
		}
	}
}
