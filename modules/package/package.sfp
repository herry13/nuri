schema Package {
	final package_name = ""
	installed : Bool
	version : String
	final type = "apt"
	final source = ""
	final destination = ""

	synchronized sub install {
		effect {
			this.installed = true
		}
	}

	synchronized sub uninstall {
		condition {
			this.installed = true
		}
		effect {
			this.installed = false
		}
	}
}
