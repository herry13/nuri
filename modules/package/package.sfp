schema Package {
	package_name = ""
	installed : Bool //= false
	version : String

	sub install {
		condition {
			//this.installed = false
		}
		effect {
			this.installed = true
		}
	}

	sub uninstall {
		condition {
			this.installed = true
		}
		effect {
			this.installed = false
		}
	}

	sub set_package_name (name isref String) {
		condition { }
		effect {
			this.package_name = name
		}
	}
}
