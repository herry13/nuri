include "modules/service/service.sfp"

schema Mysql extends Service {
	port = 3306
	root_password = ""
	public = false

	procedure set_root_password (passwd isref String) {
		condition {
			this.running = true
		}
		effect {
			this.root_password = passwd
		}
	}

	procedure set_public (pub isref Boolean) {
		condition {
			this.installed = true
		}
		effect {
			this.public = pub
		}
	}
}
