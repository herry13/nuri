include "modules/machine/machine.sfp"

class Cloud {
	running is false
	description is ""

	procedure delete_vm(vm isref VM) {
		condition {
			this.running = true
			vm.oncloud = this
		}
		effect {
			vm.created = false
			vm.running = false
			vm.oncloud = null
		}
	}

	procedure create_vm(vm isref VM) {
		condition {
			this.running = true
			vm.created = false
		}
		effect {
			vm.created = true
			vm.running = true
			vm.oncloud = this
		}
	}
}
