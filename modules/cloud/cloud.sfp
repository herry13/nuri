schema cloud {
	running : Boolean

	def create_vm (vm isref vm) {
		condition {
			this.running = true
			vm.created = false
		}
		effect {
			vm.in_cloud = this
			vm.created = true
		}
	}

	def delete_vm (vm isref vm) {
		condition {
			this.running = true
			vm.created = true
			vm.in_cloud = this
		}
		effect {
			vm.created = false
			vm.in_cloud = null
		}
	}
}
