include "svcref-type.sfp"

initial state {
	a isa Server {
		name is "A"
		running is true
	}
	b isa Server {
		name is "B"
	}
	pc1 isa Client {
		refer is a
	}
	pc2 isa Client {
		refer is a
	}
}
goal constraint {
	a.running is false
}
global constraint {
	pc1.refer.running != false
	if pc2.refer = b then b.running = true
}
