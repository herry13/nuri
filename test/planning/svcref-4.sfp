include "svcref-type.sfp"

initial state {
	a isa Server {
		name is "A"
		running is true
	}
	b isa Server {
		name is "B"
	}
	pc1 isa Client {
		refer is a
	}
	pc2 isa Client {
		refer is a
	}
}
goal constraint {
	a.running is false
}
global constraint {
	if pc1.refer = a then a.running = true
	if pc1.refer = b then b.running = true
	if pc2.refer = a then a.running = true
	if pc2.refer = b then b.running = true
}
