include "cloudburst-type.sfp"

initial state {
	private_cloud isa Cloud
	public_cloud isa Cloud
	vm1 isa VM {
		on_cloud = private_cloud
		has_service = web1
		running = true
	}
	vm2 isa VM {
		on_cloud = private_cloud
		has_service = web2
		running = false
	}
	web1 isa Service {
		vm = vm1
		running = true
	}
	web2 isa Service {
		vm = vm2
		running = false
	}	
	pc1 isa Client {
		refer = web1
	}
	pc2 isa Client {
		refer = web1
	}
}
goal constraint {
	vm1.on_cloud = public_cloud
	vm2.running = false
	pc1.refer = web1
	pc2.refer = web1
}
global constraint {
	pc1.refer.running = true
	pc2.refer.running = true
}
